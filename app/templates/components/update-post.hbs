{{#if updatePostForm}}
  <h1>Update Post</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="text">Text</label>
        {{input value=text id="text" placeholder=post.text}}
      </div>

      <div class="form-group">
        <label for="username">User Name</label>
        {{input value=username id="username" placeholder=post.username}}
      </div>

      <button {{action 'updatePost' post}}>Update</button>
    </form>
  </div>

{{else}}
    <button {{action 'updateFormShow'}}>Update Post</button>
{{/if}}
