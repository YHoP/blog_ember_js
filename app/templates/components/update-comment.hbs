{{#if updateCommentForm}}
  <h1>Update Comment</h1>
  <div>
    <form>
      <!-- ?? how to get post id and pass into input
      {{input type="hidden" value=model.post id="post_id"}} -->

      <div class="form-group">
        <label for="username">User Name</label>
        {{input value=username id="username" placeholder=comment.username}}
      </div>

      <div class="form-group">
        <label for="text">Comment</label>
        {{textarea value=text id="text" placeholder=comment.text}}
      </div>

      <button class="btn btn-info" {{action 'updateComment' comment}}>Update</button>
    </form>
  </div>

{{else}}
    <button class="btn btn-info" {{action 'updateCommentShow'}}>Update Comment</button>
{{/if}}
